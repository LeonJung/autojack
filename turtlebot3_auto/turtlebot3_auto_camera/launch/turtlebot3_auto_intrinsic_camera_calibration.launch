<launch>
  <!-- run pi camera -->
  <include file="$(find turtlebot3_auto_camera)/launch/turtlebot3_auto_camera_pi.launch" />
  
  <!-- image transport from compressed to raw -->
  <node pkg="image_transport" type="republish" name="republish" args="compressed in:=camera/image raw out:=camera/image" />

  <!-- camera calibration uses raw image -->
  <node pkg="camera_calibration" type="cameracalibrator.py" name="cameracalibrator" args="--size 7x5 --square 0.029 image:=/camera/image camera:=/camera" output="screen"/>
</launch>